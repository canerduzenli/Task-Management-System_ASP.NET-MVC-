@model Project

@{
    ViewData["Title"] = "Delete Project";
}

<div>
    <h2>@ViewData["Title"]</h2>
    <div>
        <form asp-action="DeleteProject" method="post">
            <div>
                <input asp-for="Id" type="hidden" value="@Model.Id" />
                <input asp-for="ProjectTitle" type="hidden" value="@Model.ProjectTitle" />
            </div>
            <div>
                <label>Confirm Request:</label>
                <input type="submit" value="Yes" />
                <input type="button" value="No" onclick="location.href='@Url.Action("Index", "Home")'" />
            </div>
        </form>
    </div>
</div>
